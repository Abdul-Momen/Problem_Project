<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".Problem_one_Activity">

    <androidx.core.widget.NestedScrollView
        android:layout_centerInParent="true"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"

              android:text="Write a java program to input number of days from user and convert it to years, weeks and days. How to convert days to years, weeks in java programming. Logic to convert days to years, weeks and days in java program.\n\n

Example\n
Input\n
Enter days: 373\n
Output\n

373 days = 1 year/s, 1 week/s and 1 day/s"
                />


            <EditText
                android:id="@+id/et_one_id"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_border"
                android:hint=" Enter Days"
                android:inputType="number" />




            <TextView
                android:id="@+id/result_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Result:"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_below="@id/e"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <Button
                    android:layout_margin="20dp"
                    android:id="@+id/year_btn_id"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buttonshape"
                    android:text="Submit"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    android:textSize="18sp" />




            </LinearLayout>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>